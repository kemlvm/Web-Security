<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">Post Düzenle!</h1>

</section>

<section id="aboutus" class="md-padding">
  <div class="container">
  </div>
</section>

<section id="contact" class="md-padding">

  <div class="row">
    <div class="col-lg-12">
      <form action="/admin/posts/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_method" value="PUT">
        <div class="row">
          <div class="offset-2 col-md-8">
            <h3>Post Başlığını Düzenler</h3>
            <div class="form-group">
              <input class="form-control" name="title" type="text" value="{{post.title}}"
                required="required" data-validation-required-message="Post Başlığı Olmadan Post Paylaşılamaz!" />
              <p class="help-block text-danger"></p>
            </div>
            <h3>Postun İçeriğini Düzenler</h3>
            <div class="form-group mb-5">
              <textarea class="form-control" name="content" placeholder="İçeriğinizi Yazınız..." required="required"
                data-validation-required-message="Lütfen İçeriğinizi Yazınız!">{{post.content}}</textarea>
              <p class="help-block text-danger"></p>
            </div>
            <h3>Postun Kategorisini Düzenler</h3>
            <div class="form-group mb-5">
              <select class="form-control" name="category">
                {{#each categories}}
                  <option value="{{_id}}">
                    {{name}}
                  </option>
                {{/each}}
              </select>

            </div>
            <!-- Link Area -->
            <h3>Postunuz İle Alakalı Link Bağlantısı İçin Başlığını Düzenler</h3>
            <div class="form-group">
              <input class="form-control" name="link_title" type="text"
                value="{{post.link_title}}" />
              <p class="help-block text-danger"></p>
            </div>
            <!-- Link Area -->

            <!-- Link Area -->
            <h3>Postunuz İle Alakalı Linkin Başlıktan Sonra URL'sini Düzenler</h3>
            <div class="form-group mb-5">
              <input class="form-control" name="link" type="text"
                value="{{post.link}}" />
              <p class="help-block text-danger"></p>
            </div>
            <!-- Link Area -->

            <!-- Link Area -->
            <h3>Postunuz İle Alakalı 2. Link Bağlantısı İçin Başlığını Düzenler</h3>
            <div class="form-group">
              <input class="form-control" name="link_title2" type="text"
                value="{{post.link2}}" />
              <p class="help-block text-danger"></p>
            </div>
            <!-- Link Area -->

            <!-- Link Area -->
            <h3>Postunuz İle Alakalı 2. Linkin Başlıktan Sonra URL'sini Düzenler</h3>
            <div class="form-group">
              <input class="form-control" name="link2" type="text"
                value="{{post.link_title2}}" />
              <p class="help-block text-danger"></p>
            </div>
            <!-- Link Area -->

          </div>

          <!-- Create Area -->
          <div class="clearfix"></div>
          <div class="col-lg-12 text-center">
            <div id="success"></div>
            <button class="main-btn" type="submit">Postu Düzenle</button>
          </div>
          <!-- Create Area -->

        </div>
      </form>
    </div>
  </div>

  </div>
</section>