<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">Detaylı İletişim Alanı</h1>

</section>

<section id="aboutus" class="md-padding">
  <div class="container">
  </div>
</section>

<section id="contact" class="md-padding">

  <div class="row">
    <div class="col-lg-12">
      <form action="/admin/contacts/{{contact._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
          <div class="offset-2 col-md-8">
            <h3>Mesaj Atan Kişinin Adı</h3>
            <div class="form-group">
              <input readonly class="form-control" name="title" type="text" value="{{contact.name}}" />
              <p class="help-block text-danger"></p>
            </div>
            <h3>Mesaj Atan Kişinin Emaili</h3>
            <div class="form-group">
              <input readonly class="form-control" name="author" type="text" value="{{contact.email}}" />
              <p class="help-block text-danger"></p>
            </div>
            <h3>Mesaj Atan Kişinin Notu/Mesajı</h3>
            <div class="form-group">
              <textarea readonly class="form-control" name="content">{{contact.message}}</textarea>
              <p class="help-block text-danger"></p>
            </div>
            <h3>Geri Dönmek İçin</h3>
            <div class="form-group">
              <td>
                <a class='btn btn-success' href='/admin/contacts'>Geri Dön</a>
              </td>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  </div>
</section>