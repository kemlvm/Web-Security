<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">Yetkili Kullanıcı Ekleme Alanı</h1>
</section>

<section id="aboutus" class="md-padding">
  <div class="container">
  </div>
</section>

<section id="contact" class="md-padding">
  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <form action="/users/register" method="POST">
          <div class="row">
            <div class="offset-2 col-md-8">
              <h3>Kullanıcı Adı Belirleyiniz</h3>
              <div class="form-group">
                <input class="form-control" name="username" type="text" placeholder="Moderatör Kullanıcı Adını Giriniz!"
                  required="required" data-validation-required-message="Lütfen Giriş İçin Bir Email Giriniz!" />
                <p class="help-block text-danger"></p>
              </div>
              <h3>@ Öncesine İsim Belirleyiniz exp: kemal@coldcompany.astrea</h3>
              <div class="form-group">
                <input class="form-control" name="email" type="email"
                  value="@coldcompany.astrea" required="required"
                  data-validation-required-message="Lütfen Kayıt İçin Bir Email Giriniz!" />
                <p class="help-block text-danger"></p>
              </div>
              <h3>Şifre Oluşturunuz</h3>
              <div class="form-group">
                <input class="form-control" name="password" type="password"
                  placeholder="Moderatörün Şifresini Oluşturunuz!" required="required"
                  data-validation-required-message="Lütfen Kayıt İşlemi İçin Şifrenizi Giriniz!" />
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button id="sendLoginButton" class="main-btn" type="submit">Moderatörü Ekle
              </button>
            </div>
          </div>
        </form>
        <h3>Geri Dönmek İçin</h3>
        <div class="form-group">
          <td>
            <a class='btn btn-success' href='/admin'>Geri Dön</a>
          </td>
        </div>
      </div>
    </div>

  </div>
</section>

