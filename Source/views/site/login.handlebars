<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">Giriş Yap!</h1>
</section>

<section id="contact" class="md-padding">
  <div class="container">

    <div class="row text-center">
      <div class="col-md-4 offset-md-4">
        <div class="section-header">
          <h2 class="title">Giriş Ekranı!</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <form action="/users/login" method="POST">
          <div class="row">
            <div class="offset-2 col-md-8">
              <div class="form-group">
                <input
                  class="form-control"
                  name="email"
                  type="email"
                  placeholder="Email Giriniz..."
                  required="required"
                  data-validation-required-message="Lütfen Giriş İçin Bir Email Giriniz!"
                />
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <input
                  class="form-control"
                  name="password"
                  type="password"
                  placeholder="Şifre Giriniz..."
                  required="required"
                  data-validation-required-message="Lütfen Giriş İşlemi İçin Şifrenizi Giriniz!"
                />
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button
                id="sendRegisterButton"
                class="main-btn"
                type="submit"
              >Giriş Yap</button>
            </div>
          </div>
        </form>
      </div>
    </div>

  </div>
</section>